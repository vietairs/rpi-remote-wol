# JWT Secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here

# Metrics retention period in days (default: 365 days / 1 year)
# Minimum: 1 day, Maximum: 3650 days (10 years)
# This controls how long raw metrics data is kept before cleanup
METRICS_RETENTION_DAYS=365

# Background Metrics Collection (24/7 monitoring)
# Enable automatic metrics collection when server is running
ENABLE_BACKGROUND_METRICS=true

# Collection interval in milliseconds (default: 300000 = 5 minutes)
# Minimum: 60000 (1 minute), Maximum: 3600000 (1 hour)
BACKGROUND_METRICS_INTERVAL=300000

# Maximum concurrent device collections (default: 3)
# Lower = less resource usage, Higher = faster collection cycles
BACKGROUND_METRICS_CONCURRENT=3

# Optional: Set to a different port if 3000 is in use
# PORT=3000
